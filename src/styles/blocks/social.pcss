.social{

   

    &__list{
      grid-column: 3/4;
display: flex;
justify-content: space-evenly;

 @include phones{
        display: none;
    }
    }

    &__item{
        width: 31px;
        height: 25px;
        margin-right: 40px;

        &:last-child{
            margin-right: 0;
        }

       

    }

     &__icon{
        width: 100%;
         &:hover{
            opacity: 0.7;
           
        }
    

    }
}