.header{
   
    display: grid;
    grid-template-columns: 2fr 12fr 3fr;
    grid-template-rows: 10vh;
    align-items: center;
    

    @include desktop{
        grid-template-columns: 1fr 7fr 1.5fr;
    }

    @include tablets{
        grid-template-columns: 1fr 3fr 2fr 1fr;
    } 
}

.header__logo{
    font-family: "Open Sans - Extrabold";
    font-size: 36px;
    font-weight: 800;
    line-height: 30px;
    grid-column: 1/2;

    &:hover{
        opacity: 0.7;
    }
    }
